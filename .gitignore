using System;
using System.IO;
namespace ConsoleApplication1
{
class program
{
    public static void Main(string[] args)
    {
        int score;
        Console.Write("What grade did you get on the test: ");
        score = int.Parse(Console.ReadLine());
        if (score >= 90)
        {
            Console.Write("You received an A on the test! ");
        }
        else if ((score >= 80) && (score < 90))
        {
            Console.Write("You received a B on the test. ");
        }
        else if ((score >= 70) && (score <80))
        {
            Console.Write("You received a C on the test. ");
        }
        else if ((score >= 60) && (score <70))
        {
            Console.Write("You received a D on the test. ");
        }
        else if ((score >= 50) && (score <60))
        {
            Console.Write("You received an F on the test. ");
        }
        int wanted;
        Console.Write("What number grade do you want in the class: ");
        wanted = int.Parse(Console.ReadLine());
        int needed;
        needed = ((wanted * 100)-(score * 50))/50;
        while (needed > 100)
        {
            Console.Write("Sorry, you would need a " + needed + " on the next test. Please pick a new target score: ");
            wanted = int.Parse(Console.ReadLine());
            needed = ((wanted * 100)-(score * 50))/50;
            if (needed < 100)
            {
                break;
            }
            else 
            {
                continue;
            }
            
        }
       
            Console.Write("Study hard, you need a " + needed + " on the next test. Good luck!");
        }
    }
}
